<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#8CB7FF"
    android:layout_height="match_parent"
    tools:context=".ui.PrincipalMenu.Fragments.PrestamoClientFragment" >

    <TextView
        android:id="@+id/idClientLenderAssigned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"

        android:fontFamily="@font/sulphur_light"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullAdressClient" />

    <EditText
        android:id="@+id/termDues"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/inputborder"
        android:ems="10"

        android:hint="Plazo Cuotas"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="@dimen/padding_input_create"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dues"
        app:layout_constraintTop_toBottomOf="@+id/amountLender" />

    <TextView
        android:id="@+id/fullPhoneClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="60dp"
        android:fontFamily="@font/sulphur_light"
        android:text="Telefono"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchClient" />

    <TextView
        android:id="@+id/fullNameClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sulphur_light"
        android:textColor="@color/secondary_text"
        android:text="Nombre Cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchClient" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchClient"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/shadow"
        android:ems="10"
        android:fontFamily="@font/sulphur_light"
        app:queryHint="Buscar Cliente"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:padding="@dimen/padding_input_create"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateLender" />

    <EditText
        android:id="@+id/interest"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/inputborder"
        android:ems="10"

        android:hint="%T.I"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="@dimen/padding_input_create"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termDues" />

    <EditText
        android:id="@+id/dateLender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/inputborder"
        android:ems="10"

        android:hint="Fecha Prestamo"
        android:inputType="date"
        android:minHeight="48dp"
        android:padding="@dimen/padding_input_create"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/interest"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/termDues" />


    <ListView
        android:id="@+id/arrayClient"
        android:visibility="gone"
        android:elevation="5dp"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/searchClient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </ListView>

    <EditText
        android:id="@+id/dues"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/inputborder"
        android:ems="10"

        android:hint="Cuotas"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="@dimen/padding_input_create"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amountLender" />

    <EditText
        android:id="@+id/amountLender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="35dp"
        android:background="@drawable/inputborder"
        android:ems="10"
        android:hint="Cantidad Prestamo"
        android:inputType="number|numberDecimal"
        android:minHeight="48dp"
        android:padding="@dimen/padding_input_create"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLender" />

    <TextView
        android:id="@+id/titleLender"
        android:layout_width="wrap_content"
        android:textColor="@color/primary_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/titanone_regular"
        android:text="@string/title_register_lender"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fullAdressClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sulphur_light"
        android:textColor="@color/secondary_text"
        android:text="DirecciÃ³n Cliente"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullNameClient" />

    <Button
        android:id="@+id/btn_acceptLender"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/inputborder"
        android:fontFamily="@font/sulphur_light"
        android:text="@string/btn_accept"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:backgroundTint="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullPhoneClient" />

    <FrameLayout
        android:elevation="5dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <include
            layout="@layout/floating_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>