<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.optiones.fragments.SingUp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/photoUser"
            android:layout_width="76dp"
            android:layout_height="83dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/idUser"
            android:layout_width="58dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shadow"
            android:elevation="9dp"
            android:hint="Id      "
            android:inputType="textPersonName"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@+id/nameUser"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameUser"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow"
            android:elevation="9dp"
            android:hint="Primer Nombre"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@+id/lastNameUser"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/lastNameUser"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow"
            android:elevation="9dp"
            android:hint="Primer Apellido"
            android:inputType="textPersonName"
            android:padding="10dp"
            app:layout_constraintStart_toEndOf="@+id/photoUser"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/emailUser"
            android:layout_width="@dimen/input_size_width"
            android:layout_height="43dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/shadow"
            android:elevation="9dp"
            android:hint="@string/prompt_email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/photoUser"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/passUser"
            android:layout_width="@dimen/input_size_width"
            android:layout_height="43dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/shadow"
            android:elevation="9dp"
            android:hint="@string/prompt_password"
            android:imeActionLabel="@string/action_sign_in_short"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:padding="10dp"
            android:selectAllOnFocus="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailUser"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/btn_registrar"
            android:layout_width="@dimen/input_size_width"
            android:layout_height="43dp"
            android:layout_gravity="start"
            android:layout_marginStart="80dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/shadow"
            android:enabled="false"
            android:text="@string/SingUp"
            android:textColor="#fff"
            app:backgroundTint="#1454A3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passUser" />

        <TextView
            android:id="@+id/singIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alReady"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_registrar"
            app:layout_constraintVertical_bias="0.123" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>